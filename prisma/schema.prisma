generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-3.0.x"]
}

// prisma/schema.prisma
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id      String @id @default(cuid())
  clerkId String @unique

  plan        Plan?
  trialEndsAt DateTime?

  // Stripe fields
  stripeCustomerId     String? @unique
  stripeSubscriptionId String? @unique
  stripePriceId        String?

  // Telegram integration
  telegramChatId   String?
  telegramLinkedAt DateTime?

  createdAt DateTime @default(now())

  automations Automation[]
  executions  Execution[]
}

enum Plan {
  BASIC
  PRO
  ULTRA
}

model Automation {
  id     String @id @default(cuid())
  userId String

  name     String
  isActive Boolean @default(false)

  // React Flow nodes + edges
  definition Json

  // One wallet per automation
  walletAddress String
  walletEncKey  String

  // Settings
  defaultSlippage Float?  @default(0.01)
  rpcEndpoint    String?
  showNodeLabels  Boolean @default(true)

  // Scheduler fields (Pro feature)
  triggerMode    TriggerMode @default(MANUAL)
  cronExpression String?
  nextRunAt      DateTime?
  lastRunAt      DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user       User        @relation(fields: [userId], references: [id])
  executions Execution[]
}

enum TriggerMode {
  MANUAL
  SCHEDULE
}

model Execution {
  id           String @id @default(cuid())
  userId       String
  automationId String

  status ExecutionStatus
  error  String?

  startedAt  DateTime  @default(now())
  finishedAt DateTime?

  user       User           @relation(fields: [userId], references: [id])
  automation Automation     @relation(fields: [automationId], references: [id])
  logs       ExecutionLog[]
}

model ExecutionLog {
  id          String @id @default(cuid())
  executionId String

  nodeId   String // React Flow node id
  nodeType String // swap, condition, read_balance, etc
  input    Json?
  output   Json?
  error    String?

  createdAt DateTime @default(now())

  execution Execution @relation(fields: [executionId], references: [id])
}

enum ExecutionStatus {
  RUNNING
  SUCCESS
  FAILED
}
