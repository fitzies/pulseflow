generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-3.0.x"]
}

// prisma/schema.prisma
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id      String @id @default(cuid())
  clerkId String @unique

  plan        Plan?
  trialEndsAt DateTime?

  // Stripe fields
  stripeCustomerId     String? @unique
  stripeSubscriptionId String? @unique
  stripePriceId        String?

  // Telegram integration
  telegramChatId   String?
  telegramLinkedAt DateTime?

  createdAt DateTime @default(now())

  automations Automation[]
  executions  Execution[]
}

enum Plan {
  BASIC
  PRO
  ULTRA
}

model Automation {
  id     String @id @default(cuid())
  userId String

  name     String
  isActive Boolean @default(false)

  // React Flow nodes + edges
  definition Json

  // One wallet per automation
  walletAddress String
  walletEncKey  String

  // Settings
  defaultSlippage Float?  @default(0.01)
  rpcEndpoint     String? @default("https://rpc.pulsechain.com")
  showNodeLabels  Boolean @default(true)
  betaFeatures    Boolean @default(false)

  // Scheduler fields (Pro feature)
  triggerMode    TriggerMode @default(MANUAL)
  cronExpression String?
  nextRunAt      DateTime?
  lastRunAt      DateTime?

  // Price trigger fields (Pro feature)
  priceTriggerLpAddress       String?   // LP pair address to monitor (must be PLS pair)
  priceTriggerOperator        String?   // '<', '>', '<=', '>=', '=='
  priceTriggerValue           Float?    // Target price threshold in PLS
  priceTriggerCooldownMinutes Int?      @default(15) // Cooldown between triggers
  priceTriggerLastTriggeredAt DateTime? // Last trigger time for cooldown

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user       User        @relation(fields: [userId], references: [id])
  executions Execution[]
  aiChat     AIChat?
}

enum TriggerMode {
  MANUAL
  SCHEDULE
  PRICE_TRIGGER
}

model Execution {
  id           String @id @default(cuid())
  userId       String
  automationId String

  status       ExecutionStatus
  error        String?
  wasScheduled Boolean         @default(false)

  startedAt  DateTime  @default(now())
  finishedAt DateTime?

  user       User           @relation(fields: [userId], references: [id])
  automation Automation     @relation(fields: [automationId], references: [id], onDelete: Cascade)
  logs       ExecutionLog[]
}

model ExecutionLog {
  id          String @id @default(cuid())
  executionId String

  nodeId   String // React Flow node id
  nodeType String // swap, condition, read_balance, etc
  input    Json?
  output   Json?
  error    String?

  createdAt DateTime @default(now())

  execution Execution @relation(fields: [executionId], references: [id], onDelete: Cascade)
}

enum ExecutionStatus {
  RUNNING
  SUCCESS
  FAILED
  CANCELLED
}

model AIChat {
  id           String @id @default(cuid())
  automationId String @unique

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  automation Automation      @relation(fields: [automationId], references: [id], onDelete: Cascade)
  messages   AIChatMessage[]
}

model AIChatMessage {
  id     String @id @default(cuid())
  chatId String

  role    String // 'user' | 'assistant' | 'system'
  content String @db.Text

  createdAt DateTime @default(now())

  chat AIChat @relation(fields: [chatId], references: [id], onDelete: Cascade)
}

model SharedAutomation {
  id         String   @id @default(cuid())
  shareCode  String   @unique
  definition Json
  createdAt  DateTime @default(now())
  expiresAt  DateTime
}
